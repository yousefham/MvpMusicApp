<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_sh"
    android:paddingStart="8dp"
    android:paddingBottom="16dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensansb_old"
        android:gravity="center"
        android:padding="16dp"
        android:text="Create New Playlist"
        android:textColor="#6c757d"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/play_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Example: Fav"
        android:padding="13dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <Button
        android:id="@+id/create_play_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"
        android:elevation="1dp"
        android:fontFamily="@font/opensanssemibold"
        android:padding="12dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:enabled="false"
        android:alpha="0.5"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/accent_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_list_name" />
</androidx.constraintlayout.widget.ConstraintLayout>